<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>SellbroCRMWPF</RootNamespace>
    <ApplicationIcon>Images\medved-colored-icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignColors" Version="2.0.0" />
    <PackageReference Include="MaterialDesignThemes" Version="4.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="5.0.4" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Prism.Core" Version="8.0.0.1909" />
  </ItemGroup>
  
  <ItemGroup>
    <Page Update="Auth\AuthView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="Fonts\Procrastinating_Pixie.ttf" />
    <Resource Include="Fonts\Montserrat-Bold.ttf" />
    <Resource Include="Fonts\Montserrat-Regular.ttf" />
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="Images\mountains.png" />
    <None Remove="Images\medved-icon.png" />
    <None Remove="Images\github-icon.png" />
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="Images\mountains.png" />
    <Resource Include="Images\medved-icon.png" />
    <Resource Include="Images\github-icon.png" />
  </ItemGroup>
  
</Project>
